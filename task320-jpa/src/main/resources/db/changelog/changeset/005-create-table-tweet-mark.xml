<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="005-create-table-tweet-mark" author="malakhov-nikita">
        <createTable tableName="tbl_tweet_mark" schemaName="distcomp">
            <column name="tweet_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="mark_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey
                tableName="tbl_tweet_mark"
                schemaName="distcomp"
                columnNames="tweet_id, mark_id"
                constraintName="pk_tweet_mark"/>

        <addForeignKeyConstraint
                baseTableName="tbl_tweet_mark"
                baseTableSchemaName="distcomp"
                baseColumnNames="tweet_id"
                constraintName="fk_tweet_mark_tweet"
                referencedTableName="tbl_tweet"
                referencedTableSchemaName="distcomp"
                referencedColumnNames="id"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="tbl_tweet_mark"
                baseTableSchemaName="distcomp"
                baseColumnNames="mark_id"
                constraintName="fk_tweet_mark_mark"
                referencedTableName="tbl_mark"
                referencedTableSchemaName="distcomp"
                referencedColumnNames="id"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>

        <createIndex tableName="tbl_tweet_mark" indexName="idx_tbl_tweet_mark_tweet_id" schemaName="distcomp">
            <column name="tweet_id"/>
        </createIndex>

        <createIndex tableName="tbl_tweet_mark" indexName="idx_tbl_tweet_mark_mark_id" schemaName="distcomp">
            <column name="mark_id"/>
        </createIndex>

        <rollback>
            <dropTable tableName="tbl_tweet_mark" schemaName="distcomp"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
