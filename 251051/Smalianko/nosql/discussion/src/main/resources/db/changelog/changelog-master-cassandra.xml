<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="2" author="Roman">
        <ext:createTable tableName="tbl_notice" keyspaceName="Distcomp">

            <ext:column name="country" type="text">
                <ext:constraints primaryKey="true" primaryKeyPosition="1"/>
            </ext:column>

            <ext:column name="issueId" type="bigint">
                <ext:constraints primaryKey="true" primaryKeyPosition="2"/>
            </ext:column>

            <ext:column name="id" type="bigint">
                <ext:constraints primaryKey="true" primaryKeyPosition="3"/>
            </ext:column>

            <ext:column name="content" type="text"/>

        </ext:createTable>
    </changeSet>

</databaseChangeLog>