<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
        logicalFilePath="002-create-tables.xml">

    <changeSet id="002-create-tables" author="Roman">

        <!-- tbl_author -->
        <createTable tableName="tbl_author">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="login" type="VARCHAR(64)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="firstname" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="lastname" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="modified" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <!-- tbl_issue -->
        <createTable tableName="tbl_issue">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="author_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="VARCHAR(2048)">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="modified" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <!-- tbl_tag -->
        <createTable tableName="tbl_tag">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(32)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="created" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="modified" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <!-- tbl_notice -->
        <createTable tableName="tbl_notice">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="issue_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="VARCHAR(2048)"/>
            <column name="created" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="modified" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <!-- tbl_issue_tab -->
        <createTable tableName="tbl_issue_tag">
            <column name="issue_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="tag_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

    <changeSet id="003-add-fks" author="Roman">
        <addForeignKeyConstraint
                baseTableName="tbl_issue"
                baseColumnNames="author_id"
                constraintName="fk_issue_author"
                referencedTableName="tbl_author"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="tbl_notice"
                baseColumnNames="issue_id"
                constraintName="fk_notice_issue"
                referencedTableName="tbl_issue"
                referencedColumnNames="id"/>

        <rollback>
            <dropForeignKeyConstraint baseTableName="tbl_notice" constraintName="fk_notice_issue"/>
            <dropForeignKeyConstraint baseTableName="tbl_issue" constraintName="fk_issue_author"/>
        </rollback>
    </changeSet>

</databaseChangeLog>