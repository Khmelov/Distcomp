<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
        logicalFilePath="2026-01-17-create-tables.xml">

    <changeSet id="2026-01-17-create-tables" author="Yan">

        <createTable tableName="tbl_user">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="login" type="VARCHAR(64)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="firstname" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="lastname" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="tbl_issue">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="VARCHAR(2048)">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="modified" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <createTable tableName="tbl_tag">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(32)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <createTable tableName="tbl_note">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="issue_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="VARCHAR(2048)"/>
        </createTable>

        <createTable tableName="tbl_issue_tag">
            <column name="issue_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="tag_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

    <changeSet id="2026-01-17-add-ForeignKeyConstraint" author="Yan">
        <addForeignKeyConstraint
                baseTableName="tbl_issue"
                baseColumnNames="user_id"
                constraintName="fk_issue_user"
                referencedTableName="tbl_user"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="tbl_note"
                baseColumnNames="issue_id"
                constraintName="fk_note_issue"
                referencedTableName="tbl_issue"
                referencedColumnNames="id"/>

        <rollback>
            <dropForeignKeyConstraint baseTableName="tbl_note" constraintName="fk_note_issue"/>
            <dropForeignKeyConstraint baseTableName="tbl_issue" constraintName="fk_issue_user"/>
        </rollback>
    </changeSet>

</databaseChangeLog>