<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <!-- 1. Создание таблицы редакторов -->
    <changeSet id="001-create-tbl-editor" author="system">
        <createTable tableName="tbl_editor" schemaName="distcomp">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="login" type="VARCHAR(64)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="firstname" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="lastname" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="modified_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- 2. Создание таблицы историй -->
    <changeSet id="002-create-tbl-story" author="system">
        <createTable tableName="tbl_story" schemaName="distcomp">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="VARCHAR(2048)">
                <constraints nullable="false"/>
            </column>
            <column name="editor_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_story_editor"
                             referencedTableName="tbl_editor" referencedColumnNames="id"
                             referencedTableSchemaName="distcomp"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="modified_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- 3. Создание таблицы меток -->
    <changeSet id="003-create-tbl-mark" author="system">
        <createTable tableName="tbl_mark" schemaName="distcomp">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(32)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="modified_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- 4. Создание таблицы реакций -->
    <changeSet id="004-create-tbl-reaction" author="system">
        <createTable tableName="tbl_reaction" schemaName="distcomp">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="content" type="VARCHAR(2048)">
                <constraints nullable="false"/>
            </column>
            <column name="story_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_reaction_story"
                             referencedTableName="tbl_story" referencedColumnNames="id"
                             referencedTableSchemaName="distcomp"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="modified_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- 5. Таблица связи многие-ко-многим Story-Mark -->
    <changeSet id="005-create-tbl-story-mark" author="system">
        <createTable tableName="tbl_story_mark" schemaName="distcomp">
            <column name="story_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_story_mark_story"
                             referencedTableName="tbl_story" referencedColumnNames="id"
                             referencedTableSchemaName="distcomp"/>
            </column>
            <column name="mark_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_story_mark_mark"
                             referencedTableName="tbl_mark" referencedColumnNames="id"
                             referencedTableSchemaName="distcomp"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="tbl_story_mark" schemaName="distcomp" columnNames="story_id, mark_id"/>
    </changeSet>

</databaseChangeLog>