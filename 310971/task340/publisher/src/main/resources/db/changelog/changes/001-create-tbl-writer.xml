<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="001-create-tbl-writer" author="liza">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="tbl_writer" schemaName="distcomp"/>
            </not>
        </preConditions>
        <createTable tableName="tbl_writer" schemaName="distcomp">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="login" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="firstname" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="lastname" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex indexName="idx_writer_login_unique" tableName="tbl_writer" schemaName="distcomp" unique="true">
            <column name="login"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

