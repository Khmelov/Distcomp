<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="010-add-role-to-user" author="system">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="tbl_user" columnName="role" schemaName="distcomp"/>
            </not>
        </preConditions>
        <addColumn tableName="tbl_user" schemaName="distcomp">
            <column name="role" type="VARCHAR(50)" defaultValue="CUSTOMER">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>

