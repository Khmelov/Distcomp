<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="005-create-tbl-tweet-label" author="liza">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="tbl_tweet_label" schemaName="distcomp"/>
            </not>
        </preConditions>
        <createTable tableName="tbl_tweet_label" schemaName="distcomp">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tweet_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="label_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="tbl_tweet_label"
                baseTableSchemaName="distcomp"
                baseColumnNames="tweet_id"
                constraintName="fk_tweet_label_tweet"
                referencedTableName="tbl_tweet"
                referencedTableSchemaName="distcomp"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
        <addForeignKeyConstraint
                baseTableName="tbl_tweet_label"
                baseTableSchemaName="distcomp"
                baseColumnNames="label_id"
                constraintName="fk_tweet_label_label"
                referencedTableName="tbl_label"
                referencedTableSchemaName="distcomp"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
        <createIndex indexName="idx_tweet_label_tweet_id" tableName="tbl_tweet_label" schemaName="distcomp">
            <column name="tweet_id"/>
        </createIndex>
        <createIndex indexName="idx_tweet_label_label_id" tableName="tbl_tweet_label" schemaName="distcomp">
            <column name="label_id"/>
        </createIndex>
        <createIndex indexName="idx_tweet_label_unique" tableName="tbl_tweet_label" schemaName="distcomp" unique="true">
            <column name="tweet_id"/>
            <column name="label_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

