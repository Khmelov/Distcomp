<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="004" author="you">
        <createTable tableName="tbl_notice">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>

            <column name="content" type="TEXT">
                <constraints nullable="false"/>
            </column>

            <column name="story_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_notice_story"
                             referencedTableName="tbl_story"
                             referencedColumnNames="id"/>
            </column>

            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <createIndex indexName="idx_notice_story"
                     tableName="tbl_notice">
            <column name="story_id"/>
        </createIndex>
    </changeSet>
    <changeSet id="004-add-updated-at-to-notice" author="you">
        <addColumn tableName="tbl_notice">
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>